{
  "name": "ts-backend-ddd-skeleton",
  "version": "1.0.0",
  "description": "",
  "scripts": {
    "dev": "NODE_ENV=dev ts-node-dev --ignore-watch ./node_modules ./src/start.ts",
    "build": "npm run build:clean && tsc && npm run build:assets",
    "build:assets": "bash ./scripts/copy-assets.sh",
    "build:clean": "rimraf build",
    "start": "NODE_ENV=production node ./build/start.js",
    "lint": "ts-standard",
    "lint:fix": "ts-standard --fix",
    "test": "npm run test:features && npm run test:unit",
    "test:features": "NODE_ENV=test cucumber-js -p app",
    "test:unit": "NODE_ENV=test jest"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@cucumber/cucumber": "8.7.0",
    "@types/compression": "1.7.2",
    "@types/convict": "6.1.1",
    "@types/errorhandler": "1.5.0",
    "@types/express": "4.17.14",
    "@types/glob": "8.0.0",
    "@types/jest": "29.1.2",
    "@types/supertest": "2.0.12",
    "husky": "4.3.8",
    "jest": "29.2.0",
    "lint-staged": "13.0.3",
    "superagent": "8.0.0",
    "supertest": "6.3.0",
    "ts-jest": "29.0.3",
    "ts-node": "10.9.1",
    "ts-node-dev": "2.0.0",
    "ts-standard": "12.0.1",
    "typescript": "4.8.4"
  },
  "dependencies": {
    "body-parser": "1.20.1",
    "compression": "1.7.4",
    "convict": "6.2.3",
    "errorhandler": "1.5.1",
    "express": "4.18.2",
    "express-promise-router": "4.1.1",
    "express-validator": "6.14.2",
    "glob": "8.0.3",
    "helmet": "6.0.0",
    "http-status": "1.5.3",
    "mongodb": "4.10.0",
    "node-dependency-injection": "3.0.3",
    "rimraf": "3.0.2"
  },
  "eslintConfig": {
    "parserOptions": {
      "project": "./tsconfig.json"
    },
    "extends": [
      "./node_modules/ts-standard/eslintrc.json"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "{src,tests}/**/*.ts": [
      "npm run lint:fix",
      "git add"
    ]
  }
}
