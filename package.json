{
  "name": "typescript-skeleton",
  "version": "1.0.0",
  "description": "",
  "scripts": {
    "dev": "NODE_ENV=dev ts-node-dev --ignore-watch ./node_modules ./src/index.ts",
    "build": "npm run build:clean && copyfiles './src/**/*.{json,yaml,html,png}' dist/src && tsc",
    "build:clean": "rm -r build; exit 0",
    "start": "NODE_ENV=production node ./build/index.js",
    "lint": "ts-standard",
    "lint:fix": "ts-standard --fix"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "husky": "4.3.8",
    "lint-staged": "13.0.3",
    "ts-node-dev": "2.0.0",
    "ts-standard": "12.0.1",
    "typescript": "4.8.4"
  },
  "dependencies": {
    "copyfiles": "2.4.1"
  },
  "eslintConfig": {
    "parserOptions": {
      "project": "./tsconfig.json"
    },
    "extends": [
      "./node_modules/ts-standard/eslintrc.json"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "{src,tests}/**/*.ts": [
      "npm run lint:fix",
      "git add"
    ]
  }
}
